{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"],
      "@core/*": ["./src/core/*"]
    },
    "lib": ["es6", "dom"]
  },
  "exclude": ["node_modules"],
  "skipLibCheck": true
}
